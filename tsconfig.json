{
  "compilerOptions": {
    "target": "es2020",                          
    "module": "commonjs",                    
    "lib": ["es6"],     
    "moduleResolution": "node",
    "declaration": true,           
    "outDir": "dist",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false
  },
}